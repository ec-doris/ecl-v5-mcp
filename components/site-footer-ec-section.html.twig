{% apply spaceless %}

{#
  Parameters:
  - "section" (object) (default: {}) The section to be rendered
  - "extra_classes" (string) (default: '') Extra classes (space separated) for the footer
  - "extra_attributes" (optional) (array) (default: []) Extra attributes for the footer
    - "name" (string) Attribute name, eg. 'data-test'
    - "value" (string) Attribute value, eg: 'data-test-1'
#}

{# Internal properties #}

{% set _section = section|default({}) %}
{% set _css_class = 'ecl-site-footer__section' %}
{% set _extra_attributes = '' %}

{# Internal logic - Process properties #}

{% if _section.name is not empty %}
  {% set _css_class = _css_class ~ ' ecl-site-footer__section--' ~ _section.name %}
{% endif %}

{% if extra_classes is defined and extra_classes is not empty %}
  {% set _css_class = _css_class ~ ' ' ~ extra_classes %}
{% endif %}

{% if extra_attributes is defined and extra_attributes is not empty and extra_attributes is iterable %}
  {% for attr in extra_attributes %}
    {% if attr.value is defined %}
      {% set _extra_attributes = _extra_attributes ~ ' ' ~ attr.name|e('html_attr') ~ '="' ~ attr.value|e('html_attr') ~ '"' %}
    {% else %}
      {% set _extra_attributes = _extra_attributes ~ ' ' ~ attr.name|e('html_attr') %}
    {% endif %}
  {% endfor %}
{% endif %}

{# Print the result #}

<div 
  class="{{ _css_class }}"
  {{ _extra_attributes|raw }}
>
  {# Title #}
  {% if _section.title is not empty %}
  <div class="ecl-site-footer__title">
    {% if _section.title.link is not empty %}
      {% include '@ecl/link/link.html.twig' with _section.title.link|merge({
        link: _section.title.link|default({})|merge({ inverted: true }),
        icon: _section.title.icon|default({}),
        extra_classes: 'ecl-site-footer__title-link',
      }) only %}
    {% else %}
      {{- _section.title -}}
    {% endif %}
  </div>
  {% endif %}

  {# Logo #}
  {% if _section.logo is not empty and _section.logo.picture is not empty %}
    {% set _label %}
    {% include '@ecl/picture/picture.html.twig' with {
      picture: _section.logo.picture,
      extra_classes: "ecl-site-footer__picture",
      extra_image_classes: 'ecl-site-footer__logo-image',
    } only %}
    {% endset %}
    {% include '@ecl/link/link.html.twig' with {
      link: {
        path: _section.logo.path,
        label: _label,
        type: 'standalone',
        inverted: true,
      },
      extra_classes: 'ecl-site-footer__logo-link'
    } only %}
  {% endif %}

  {# Description #}
  {% if _section.description is not empty %}
    <div class="ecl-site-footer__description">{{ _section.description }}</div>
  {% endif %}

  {# Social media and extra links #}
  {% if _section.social_media is not empty or _section.extra_links is not empty %}
    {% if _section.extra_links is not empty %}
      <div class="ecl-site-footer__extra-links-container">
    {% endif %}

    {% if _section.social_media is not empty %}
      {% include '@ecl/social-media-follow/social-media-follow.html.twig' with _section.social_media|merge({
        extra_classes: 'ecl-site-footer__social-media',
      }) only %}
    {% endif %}

    {% if _section.extra_links is not empty %}
        <ul class="ecl-site-footer__list ecl-site-footer__list--inline">
          {% for _item in _section.extra_links %}
            <li class="ecl-site-footer__list-item">
              {% include '@ecl/link/link.html.twig' with _item|merge({
                link: _item.link|default({})|merge({ type: 'standalone', inverted: true }),
                extra_classes: 'ecl-site-footer__link',
              }) only %}
            </li>
          {% endfor %}
        </ul>
      </div>
    {% endif %}
  {% endif %}

  {# Links #}
  {% if _section.links is not empty %}
    {% set _list_class_name = 'ecl-site-footer__list' %}
    {% if _section.links_inline %}
      {% set _list_class_name = _list_class_name ~ ' ecl-site-footer__list--inline' %}
    {% endif %}
    <ul class="{{ _list_class_name }}">
      {% for _item in _section.links %}
        <li class="ecl-site-footer__list-item">
          {% include '@ecl/link/link.html.twig' with _item|merge({
            link: _item.link|default({})|merge({ type: 'standalone', inverted: true }),
            extra_classes: 'ecl-site-footer__link',
          }) only %}
        </li>
      {% endfor %}
    </ul>
  {% endif %}
</div>
          
{% endapply %}
