{% apply spaceless %}

{#
  Parameters:
    - "color_mode" (string) The color mode name
    - "items" (array) (default: []): array of list_illustration_item
    - "column" (number) (default: 1): number of columns (1 column means vertical display)
    - "zebra" (boolean) (default: false): use alternate background display for vertical list
    - "icon_inline" (boolean) (default: false) Place the icon on the left of the item
    - "icon_list" (boolean) (default: false) renders as icon list
    - "number_list" (boolean) (default: false) renders as number list
    - "divider" (boolean) (default: false): Item separator, in the icon list
    - "counter_reset": (boolean) (default: true) In a number list, resets the counter so that it starts from counter_start
    - "counter_start": (string) (default: '') An arbistrary number to start the counter from, depends on counter_reset
    - "centered" (bool) (default: false) Define if the items should be centered
    - "font_size" (string) (default: 'l') Size of the value (can be 'm', 'l')
    - "extra_classes" (string) (default: '')
    - "extra_attributes" (array) (default: []): format: [
        {
          "name" (string) (default: ''),
          "value" (optional) (string)
        ...
      ],
#}

{# Internal properties #}

{% set _color_mode = color_mode|default('') %}
{% set _items = items|default([]) %}
{% set _zebra = zebra|default(false) %}
{% set _centered = centered|default(false) %}
{% set _font_size = font_size|default('l') %}
{% set _column = column|default(1) %}
{% set _css_class = 'ecl-list-illustration' %}
{% set _icon_inline = icon_inline|default(false) %}
{% set _icon_list = icon_list|default(false) %}
{% set _number_list = number_list|default(false) %}
{% set _divider = divider|default(false) %}
{% set _counter_reset = counter_reset ?? true %}
{% set _counter_start = counter_start|default(0) %}
{% set _extra_attributes = '' %}

{# Internal logic - Process properties #}

{% if _color_mode is not empty %}
  {% set _css_class = _css_class ~ ' ' ~ 'ecl-color-mode--' ~ _color_mode %}
{% endif %}

{% if _zebra %}
  {% set _css_class = _css_class ~ ' ' ~ 'ecl-list-illustration--zebra' %}
{% endif %}

{% if _icon_inline %}
  {% set _css_class = _css_class ~ ' ' ~ 'ecl-list-illustration--icon-inline' %}
{% endif %}

{% if _icon_list %}
  {% set _css_class = _css_class ~ ' ' ~ 'ecl-list-illustration--icon-list' %}
{% endif %}

{% if _number_list %}
  {% set _css_class = _css_class ~ ' ' ~ 'ecl-list-illustration--number-list' %}
{% endif %}

{% if _number_list and  _counter_reset %}
  {% set _css_class = _css_class ~ ' ' ~ 'ecl-list-illustration--number-list-reset' %}
{% endif %}

{% if _centered %}
  {% set _css_class = _css_class ~ ' ecl-list-illustration--centered' %}
{% endif %}

{% if _font_size != 'l' %}
  {% set _css_class = _css_class ~ ' ecl-list-illustration--font-' ~ _font_size %}
{% endif %}

{% if _column and _column > 1 and _column < 5 %}
  {% set _css_class = _css_class ~ ' ' ~ 'ecl-list-illustration--col-' ~ _column %}
{% endif %}

{% if extra_classes is defined and extra_classes is not empty %}
  {% set _css_class = _css_class ~ ' ' ~ extra_classes %}
{% endif %}

{% if extra_attributes is defined and extra_attributes is not empty and extra_attributes is iterable %}
  {% for attr in extra_attributes %}
    {% if attr.value is defined %}
      {% set _extra_attributes = _extra_attributes ~ ' ' ~ attr.name|e('html_attr') ~ '="' ~ attr.value|e('html_attr') ~ '"' %}
    {% else %}
      {% set _extra_attributes = _extra_attributes ~ ' ' ~ attr.name|e('html_attr') %}
    {% endif %}
  {% endfor %}
{% endif %}

{# Print the result #}

{% if _items is not empty and _items is iterable %}
<ul
  class="{{ _css_class }}"
  {{ _extra_attributes|raw }}
  {% if _number_list and _counter_reset %}
    style="--ecl-list-illustration-counter-start: {{ _counter_start|e('html_attr') }};"
  {% endif %}
>
  {%- for _item in _items %}
    {% set cutoff = _items|length - (_items|length % _column == 0 ? _column : items|length % _column) %}
    {% include '@ecl/list-illustration/list-illustration-item.html.twig' 
      with (_item|merge({
        column: _column,
        divider: _divider,
        last: loop.index0 >= cutoff,
      })) only %}
  {% endfor -%}
</ul>
{% endif %}

{% endapply %}
