{% apply spaceless %}

{#
  Parameters:
  - "value" (string) (default: '') Indicator value
  - "sr_label" (string) (default: '') Additional label for screen readers
  - "extra_classes" (string) (default: '') Extra classes (space separated) for the indicator
  - "extra_attributes" (optional) (array) (default: []) Extra attributes for the indicator
    - "name" (string) Attribute name, eg. 'data-test'
    - "value" (optional) (string) Attribute value, eg: 'data-test-1'
#}

{# Internal properties #}

{% set _value = value|default('') %}
{% set _sr_label = sr_label|default('') %}
{% set _css_class = 'ecl-indicator' %}
{% set _extra_attributes = '' %}

{# Internal logic - Process properties #}

{% if extra_classes is defined and extra_classes is not empty %}
  {% set _css_class = _css_class ~ ' ' ~ extra_classes %}
{% endif %}

{% if extra_attributes is defined and extra_attributes is not empty and extra_attributes is iterable %}
  {% for attr in extra_attributes %}
    {% if attr.value is defined %}
      {% set _extra_attributes = _extra_attributes ~ ' ' ~ attr.name|e('html_attr') ~ '="' ~ attr.value|e('html_attr') ~ '"' %}
    {% else %}
      {% set _extra_attributes = _extra_attributes ~ ' ' ~ attr.name|e('html_attr') %}
    {% endif %}
  {% endfor %}
{% endif %}

{# Print the result #}

<span
  data-ecl-indicator
  data-ecl-auto-init="Indicator" 
  class="{{ _css_class }}"
  {{ _extra_attributes|raw }}
>
  {%- if _value is not empty -%}
    <span class="ecl-indicator__value">
      {{- _value -}}
    </span>
  {%- endif -%}

  {%- if _sr_label is not empty -%}
    <span class="ecl-indicator__label">
      {{- _sr_label -}}
    </span>
  {%- endif -%}
</span>

{% endapply %}
